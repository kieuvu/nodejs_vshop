<div class="pcoded-main-container">
  <div class="pcoded-wrapper">
    <div class="pcoded-content">
      <div class="pcoded-inner-content">
        <div class="main-body">
          <div class="page-wrapper">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
              <div class="page-block">
                <div class="row align-items-center">
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h5 class="m-b-10">Sửa sản phẩm</h5>
                    </div>
                    <ul class="breadcrumb">
                      <li class="breadcrumb-item"><a href="index.html"><i class="feather icon-home"></i></a></li>
                      <li class="breadcrumb-item"><a href="#!">Form Components</a></li>
                      <li class="breadcrumb-item"><a href="#!">Form Elements</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <!-- [ breadcrumb ] end -->
            <!-- [ Main Content ] start -->
            <form action="/admin/product/update/" id="update_prdForm" enctype='multipart/form-data'>
              <div class="row">
                <!-- [ form-element ] start -->
                <div class="col-sm-12">
                  <div class="card">
                    <div class="card-body">
                      <h5>Điền đầy đủ thông tin</h5>
                      <hr>
                      <label style="color: black;font-size:16px;">
                        * Thông tin mặt hàng:
                      </label>
                      <div class="row">
                        <input id="prd_id" type="text" value="" name="prd_id" required hidden readonly>
                        <div class="col-6">
                          <div class="form-group">
                            <label for="prd_name">
                              1.Tên sản phẩm:
                            </label>
                            <input required type="text" class="form-control" id="prd_name" name="prd_name"
                              placeholder="Nhập tên sản phẩm">
                          </div>
                          <div class="row">
                            <div class="col-md-4">
                              <div class="form-group">
                                <label for="prd_quantity">
                                  2.Số lượng sản phẩm:
                                </label>
                                <input required type="number" min="0" value="0" class="form-control" id="prd_quantity"
                                  name="prd_quantity" placeholder="Nhập số lượng sản phẩm">
                              </div>
                            </div>
                            <div class="col-md-4">
                              <div class="form-group">
                                <label for="prd_price">
                                  3.1 Giá sản phẩm (gốc):
                                </label>
                                <input required type="number" min="0" value="0" class="form-control" id="prd_price"
                                  placeholder="Nhập giá sản phẩm" name="prd_price">
                              </div>
                            </div>
                            <div class="col-md-4">
                              <div class="form-group">
                                <label for="prd_priceSaled">
                                  3.2 Giá sản phẩm (sale):
                                </label>
                                <input required type="number" min="0" value="0" class="form-control" id="prd_priceSaled"
                                  placeholder="Nhập giá sale" name="prd_priceSaled">
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-6">
                          <div class="form-group">
                            <label for="prd_brand">
                              4.Thương hiệu:
                            </label>
                            <select required class="form-control" id="prd_brand" name="prd_brand">
                            </select>
                          </div>
                          <div class="form-group">
                            <label for="prd_cate">
                              5.Danh mục:
                            </label>
                            <select required class="form-control" id="prd_cate" name="prd_cate">
                            </select>
                          </div>
                        </div>
                        <div class="col-12">
                          <hr>
                          <label style="color: black;font-size:16px;">
                            * Chọn ảnh sản phẩm:
                          </label>
                          <div class="row">
                            <div class="col-6 col-lg-3">
                              <div class="form-group mb-3">
                                <label for="prd_stImg">
                                  6.1 Ảnh đại diện:
                                </label>
                                <input type="file" class="form-control-file " id="prd_stImg" name="prd_stImg"
                                  accept="image/*">
                              </div>
                              <div id="img_preview1" class="mb-3">
                                <img alt="" id="img_preview-img1" style="object-fit: cover;height:100px;width:100px;">
                              </div>
                            </div>
                            <div class="col-6 col-lg-3">
                              <div class="form-group mb-3">
                                <label for="prd_scImg">
                                  6.2 Ảnh liên quan 1:
                                </label>
                                <input type="file" class="form-control-file " id="prd_scImg" name="prd_scImg"
                                  accept="image/*">
                              </div>
                              <div id="img_preview2" class="mb-3">
                                <img alt="" id="img_preview-img2" style="object-fit: cover;height:100px;width:100px;">
                              </div>
                            </div>
                            <div class="col-6 col-lg-3">
                              <div class="form-group mb-3">
                                <label for="prd_rdImg">
                                  6.3 Ảnh liên quan 2:
                                </label>
                                <input type="file" class="form-control-file " id="prd_rdImg" name="prd_rdImg"
                                  accept="image/*">
                              </div>
                              <div id="img_preview3" class="mb-3">
                                <img alt="" id="img_preview-img3" style="object-fit: cover;height:100px;width:100px;">
                              </div>
                            </div>
                            <div class="col-6 col-lg-3">
                              <div class="form-group mb-3">
                                <label for="prd_thImg">
                                  6.4 Ảnh liên quan 3:
                                </label>
                                <input type="file" class="form-control-file " id="prd_thImg" name="prd_thImg"
                                  accept="image/*">
                              </div>
                              <div id="img_preview4" class="mb-3">
                                <img alt="" id="img_preview-img4" style="object-fit: cover;height:100px;width:100px;">
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-12">
                          <hr>
                          <label style="color: black;font-size:16px;">
                            * Cấu hình sản phẩm:
                          </label>
                          <div class="row">
                            <div class="col-md-3">
                              <div class="form-group">
                                <label for="prd_chip">
                                  7.1 Chip xử lí:
                                </label>
                                <input type="text" class="form-control" id="prd_chip"
                                  placeholder="Nhập tên Chip xử lý (CPU)" name="prd_chip">
                              </div>
                            </div>
                            <div class="col-md-3">
                              <div class="form-group">
                                <label for="prd_ram">
                                  7.2 Thông số RAM:
                                </label>
                                <input type="text" class="form-control" id="prd_ram" placeholder="Nhập thông số RAM"
                                  name="prd_ram">
                              </div>
                            </div>
                            <div class="col-md-3">
                              <div class="form-group">
                                <label for="prd_rom">
                                  7.3 Bộ nhớ trong:
                                </label>
                                <input type="text" class="form-control" id="prd_rom"
                                  placeholder="Nhập thông tin bộ nhớ trong" name="prd_rom">
                              </div>
                            </div>
                            <div class="col-md-3">
                              <div class="form-group">
                                <label for="prd_display">
                                  7.4 Màn hình:
                                </label>
                                <input type="text" class="form-control" id="prd_display"
                                  placeholder="Nhập kích thước, công nghệ màn hình" name="prd_display">
                              </div>
                            </div>
                            <div class="col-md-3">
                              <div class="form-group">
                                <label for="prd_os">
                                  7.5 Hệ điều hành:
                                </label>
                                <input type="text" class="form-control" id="prd_os" placeholder="Nhập tên HĐH"
                                  name="prd_os">
                              </div>
                            </div>
                            <div class="col-md-3">
                              <div class="form-group">
                                <label for="prd_camera">
                                  7.6 Thông số camera:
                                </label>
                                <input type="text" class="form-control" id="prd_camera"
                                  placeholder="Nhập thông số camera" name="prd_camera">
                              </div>
                            </div>
                            <div class="col-md-3">
                              <div class="form-group">
                                <label for="prd_battery">
                                  7.7 Thông số Pin (mAH):
                                </label>
                                <input type="text" class="form-control" id="prd_battery" placeholder="Nhập thông số Pin"
                                  name="prd_battery">
                              </div>
                            </div>
                            <div class="col-md-3">
                              <div class="form-group">
                                <label for="prd_gcard">
                                  7.8 Card đồ họa:
                                </label>
                                <input type="text" class="form-control" id="prd_gcard"
                                  placeholder="Nhập tên Card đồ họa" name="prd_gcard">
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-12">
                          <div class="form-group">
                            <label for="prd_desc">
                              7.Mô tả sản phẩm:
                            </label>
                            <textarea class="form-control" name="prd_desc" id="prd_desc" rows="3"></textarea>
                          </div>
                        </div>
                        <div>
                          <button type="submit" id="add_btn" class="mt-3 ml-3 btn btn-primary">Sửa</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- [ form-element ] end -->
                <!-- [ Main Content ] end -->
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/31.0.0/classic/ckeditor.js"></script>
<script src="/js/editProduct.js"></script>